# We moved a lot of files to the project-freon overlay. Make sure we
# regen the board setup for each freon board.

BOARDS=(
  nyan
  nyan-big
  nyan-kitty
  nyan-blaze
)

for b in "${BOARDS[@]}"; do
  if [[ -d /build/${b} ]]; then
    /mnt/host/source/chromite/bin/setup_board \
      --board=${b} \
      --skip-chroot-upgrade \
      --regen-configs
  fi
done
