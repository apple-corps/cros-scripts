# We've migrated to kmod now.  Force existing builds to shift over too.

export CLEAN_DELAY=0

cleanit() {
  local root=$1
  sudo emerge --root "${root}" -Cq sys-apps/module-init-tools
}

cleanit / &
for board_root in /build/*; do
  cleanit "${board_root}" &
done
wait
