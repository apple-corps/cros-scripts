# We moved a lot of files to the project-freon overlay. Make sure we
# regen the board setup for each freon board.

BOARDS=(
  butterfly
  lumpy
  parrot
  parrot-ivb
  stumpy
  x86-alex
  x86-alex-he
  x86-mario
  x86-zgb
  x86-zgb-he
)

for b in "${BOARDS[@]}"; do
  if [[ -d /build/${b} ]]; then
    /mnt/host/source/chromite/bin/setup_board \
      --board=${b} \
      --skip-chroot-upgrade \
      --regen-configs
  fi
done
