# We moved a lot of files to the project-freon overlay. Make sure we
# regen the board setup for each freon board.

BOARDS=(
  candy
  clapper
  enguarde
  expresso
  glimmer
  gnawty
  kip
  parrot_ivb
  rambi
  squawks
  swanky
  winky
)

for b in "${BOARDS[@]}"; do
  if [[ -d /build/${b} ]]; then
    ~/trunk/src/scripts/setup_board \
      --board=${b} \
      --skip_chroot_upgrade \
      --regen_configs
  fi
done
