# With the addition of freon we must regenerate the board setup for impacted
# boards.

BOARDS=(
  auron
  auron_paine
  auron_yuna
  cid
  jecht
)

for b in "${BOARDS[@]}"; do
  if [[ -d /build/${b} ]]; then
    ~/trunk/src/scripts/setup_board \
      --board=${b} \
      --skip_chroot_upgrade \
      --regen_configs
  fi
done
