# We moved a lot of files to the project-freon overlay. Make sure we
# regen the board setup for each freon board.

BOARDS=(
  amd64-generic_freon
  arm-generic_freon
  daisy_freon
  falco_freon
  link_freon
  nyan_freon
  panther_freon
  peppy_freon
  rush_ryu
)

for b in "${BOARDS[@]}"; do
  if [[ -d /build/${b} ]]; then
    ~/trunk/src/scripts/setup_board \
      --board=${b} \
      --skip_chroot_upgrade \
      --regen_configs
  fi
done
