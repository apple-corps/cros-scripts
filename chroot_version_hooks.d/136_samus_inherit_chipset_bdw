# We are now inheriting chipset-bdw from overlay-samus. We need to regen
# the config so Portage can find chipset-bdw properly.

for b in samus; do
  if [[ -d /build/${b} ]]; then
    ~/trunk/src/scripts/setup_board \
      --board=${b} \
      --skip_chroot_upgrade \
      --regen_configs
  fi
done
